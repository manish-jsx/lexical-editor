# Vercel Blob Storage credentials
# Get these from your Vercel dashboard: https://vercel.com/dashboard
BLOB_READ_WRITE_TOKEN=your_vercel_blob_read_write_token
VERCEL_BLOB_STORE_ID=your_vercel_blob_store_id  

# Neon PostgreSQL Database
# Get your connection string from Neon.tech dashboard: https://console.neon.tech
NEON_DATABASE_URL=postgresql://user:password@endpoint.pooler.region.neon.tech/database_name

# Optional: Set this to true to enable WebSocket for Neon DB connection
# This can provide better performance for serverless environments
NEON_USE_WEBSOCKETS=true

# Optional: For server-side image manipulation/optimization
IMAGE_OPTIMIZATION_API_KEY=your_image_api_key

# Environment indicator (development, production)
NODE_ENV=development
